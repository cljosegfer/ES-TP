<!-- views/partials/pĺanos-form.handlebars -->

<fieldset style="border-width:0">
    <!-- disciplina -->
    <div class="whiteboard form-group">
        <label for="disciplina">Disciplina</label><br>
        <input id="disciplina" type="text" name="disciplina" value="{{plano.disciplina}}"/>
    </div>

    <!-- ementa -->
    <div class="whiteboard form-group">
        <label for="ementa">Ementa</label><br>
        <input id="ementa" type="text" name="ementa" value="{{plano.ementa}}"/>
    </div>

    <!-- descricao -->
    <div class="whiteboard form-group">
        <label for="descricao">Descrição</label><br>
        <textarea id="descricao" name="descricao" rows="10" />{{plano.descricao}}</textarea>
    </div>

    <!-- referencias -->
    <div class="whiteboard form-group">
        <label for="referencias">Referências</label><br>
        <textarea id="referencias" name="referencias" rows="10" />{{plano.referencias}}</textarea>

    </div>

</fieldset>
<!-- views/planos-show.handlebars -->
<link rel="stylesheet" 
    href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" 
    crossorigin="anonymous">

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>{{plano.disciplina}}</h1>
        <p>{{plano.author.username}}, {{plano.created_at}}</p>
        <p>{{plano.descricao}}</p>

        <p>{{plano.ementa}}</p>
        <p>{{plano.referencias}}</p>
        

        <p>
            <form method="GET" action="/planos/{{plano._id}}/edit">
            <button type="submit">editar</button>
            </form>
        </p>
        
        <p>
            <form method="POST" action="/planos/{{plano._id}}?_method=DELETE">
            <button type="submit">deletar</button>
            </form>
        </p>

        <hr>
        <!-- comment form -->
        {{> comments-form}}

        <hr>

        {{#each plano.comments}}
            <p>{{this.content}}</p>
            <p class="text-right">{{this.author.username}}</p>
        {{/each}}

    </div>
</div>
